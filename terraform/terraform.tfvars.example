# Example Terraform variables file
# Copy this to terraform.tfvars and customize with your values
# DO NOT commit terraform.tfvars to version control

resource_group_name = "devops-demo-rg"
location            = "eastus"

# ACR name must be globally unique and alphanumeric
acr_name = "devopsdemoacrXXXXX"  # Replace XXXXX with random chars or your initials

# Key Vault name must be globally unique
key_vault_name = "devops-kv-XXXXX"  # Replace XXXXX with random chars

aks_cluster_name = "devops-demo-aks"
aks_dns_prefix   = "devopsdemo"
aks_node_count   = 2
aks_node_vm_size = "Standard_D2s_v3"

environment = "dev"

tags = {
  Environment = "demo"
  Project     = "devops-demonstration"
  ManagedBy   = "terraform"
  Owner       = "your-name"
}
